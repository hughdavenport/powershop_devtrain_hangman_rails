<%= form_for(@word_list) do |f| %>
  <% if @word_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= t(:errors_prohibited_this_thing_from_being_saved, errors: t(:error, count: @word_list.errors.count), thing: WordList.model_name.human.downcase) %>:</h2>

      <ul>
      <% @word_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
